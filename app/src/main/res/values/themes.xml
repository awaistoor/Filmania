<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Filmania" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Filmania.TextView" parent="Widget.MaterialComponents.TextView">

    </style>

    <style name="Theme.Filmania.TextView.Title" parent="Theme.Filmania.TextView">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Theme.Filmania.TextView.SubTitle" parent="Theme.Filmania.TextView">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Filmania.TextView.Heading" parent="Theme.Filmania.TextView">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/black_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Filmania.TextView.Normal" parent="Theme.Filmania.TextView">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black_900</item>

    </style>

    <style name="Theme.Filmania.TextView.RateText" parent="Theme.Filmania.TextView">
        <item name="android:textSize">@dimen/_28sp</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Filmania.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:max">5</item>
        <item name="android:scaleX">.5</item>
        <item name="android:scaleY">.5</item>
        <item name="android:stepSize">.5</item>
        <item name="android:progressTint">@color/blue_500</item>
    </style>
</resources>